datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String
  date        DateTime
  time        String
  createdAt   DateTime @default(now())
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  events    Event[]
  createdAt DateTime @default(now())
}
